<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"


        >

        <Button
            android:id="@+id/btn_phone_sign_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/fui_ic_phone_white_24dp"
            android:padding="16dp"
            android:text="Sign In with Phone"
            android:textColor="@color/white"

            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/btn_google_sign_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/fui_ic_googleg_color_24dp"
            android:padding="16dp"
            android:text="Sign In with Google"
            android:textColor="@color/white"

            app:backgroundTint="#000000" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="395dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/splash_screen" />
</RelativeLayout>